#version 460
#extension GL_ARB_shading_language_include : require

layout(local_size_x = 64) in;

#include "common/buffers.glsli"


void main() {
	const uint segment_key = gl_GlobalInvocationID.x;
	if (segment_key < B_common_desc.num_segments) {
		B_segment_attribs.data[segment_key].stroke_vertices.count = max(B_segment_attribs.data[segment_key].segment_edges.count - 1, 1) * 2 * 3;
	}
}
