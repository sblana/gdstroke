#version 450
#extension GL_ARB_shading_language_include : enable

layout(local_size_x = 1024) in;

#include "common/buffers.glsli"
#include "common/scans.glsli"


shared int block_offsets[gl_WorkGroupSize.x];

#define fn_get_src_array(MP_idx_)                     B_segment_stroke_vertex_range.data[MP_idx_].num_vertices
#define fn_set_src_to_dst_map(MP_idx_, MP_value_)     B_segment_stroke_vertex_range.data[MP_idx_].first_idx  = MP_value_
#define fn_add_set_src_to_dst_map(MP_idx_, MP_value_) B_segment_stroke_vertex_range.data[MP_idx_].first_idx += MP_value_

void main() {
	M_SINGLE_WORKGROUP_ALLOCATION(
		int,
		block_offsets,
		B_segment_desc.num_segments,
		fn_get_src_array,
		B_stroke_desc.total_num_vertices,
		fn_set_src_to_dst_map,
		fn_add_set_src_to_dst_map
	)
}
