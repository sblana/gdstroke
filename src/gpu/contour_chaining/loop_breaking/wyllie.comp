#version 450
#extension GL_ARB_shading_language_include : enable

layout(local_size_x = 64) in;

#include "common/buffers.glsli"
#include "common/math.glsli"


layout(push_constant) RESTRICT uniform PushConstants {
	int  read_layer;
	int write_layer;
} U_push_constants;

void main() {
	const uint pixel_edge_idx = gl_GlobalInvocationID.x;
	if (pixel_edge_idx < B_common_desc.num_pixel_edges) {
		const FragmentedPixelEdgeWyllieData curr_data = B_fragmented_pixel_edge_wyllie.data[pixel_edge_idx][U_push_constants.read_layer];
		if (curr_data.prev_idx != -1) {
			FragmentedPixelEdgeWyllieData next_data = curr_data;

			if (curr_data.next_idx == -1) {
				B_fragmented_pixel_edge_wyllie.data[pixel_edge_idx][U_push_constants.write_layer] = curr_data;
				return;
			}

			if (B_fragmented_pixel_edge_wyllie.data[curr_data.next_idx][U_push_constants.read_layer].value > curr_data.value) {
				next_data = B_fragmented_pixel_edge_wyllie.data[curr_data.next_idx][U_push_constants.read_layer];
			}
			next_data.next_idx = B_fragmented_pixel_edge_wyllie.data[curr_data.next_idx][U_push_constants.read_layer].next_idx;

			B_fragmented_pixel_edge_wyllie.data[pixel_edge_idx][U_push_constants.write_layer] = next_data;
		}
	}
}
