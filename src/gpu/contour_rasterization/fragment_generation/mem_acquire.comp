		B_contour_fragment_attribs                   = ContourFragmentAttribsBuffer               (balloc_acquire(B_contour_balloc_buffer, B_contour_desc.num_contour_fragments * PER_ELEMENT_BYTES_CONTOUR_FRAGMENT_ATTRIBS_BUFFER));
