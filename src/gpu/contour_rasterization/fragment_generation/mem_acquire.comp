		B_contour_fragment_pseudo_visible            = ContourFragmentPseudoVisibleBuffer         (balloc_acquire(B_contour_balloc_buffer, B_contour_desc.num_contour_fragments * PER_ELEMENT_BYTES_CONTOUR_FRAGMENT_PSEUDO_VISIBLE_BUFFER));
		B_allocation_contour_pixel                   = AllocationContourPixelBuffer               (balloc_acquire(B_contour_balloc_buffer, B_contour_desc.num_contour_fragments * PER_ELEMENT_BYTES_ALLOCATION_CONTOUR_PIXEL_BUFFER));
		B_foremost_contour_fragment_to_contour_pixel = ForemostContourFragmentToContourPixelBuffer(balloc_acquire(B_contour_balloc_buffer, B_contour_desc.num_contour_fragments * PER_ELEMENT_BYTES_FOREMOST_CONTOUR_FRAGMENT_TO_CONTOUR_PIXEL_BUFFER));
	}
}
